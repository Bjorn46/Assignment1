<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment1.DebtorsPage">

    <StackLayout Padding="20">

        <Label Text="Debtors"
               FontSize="24"
               HorizontalOptions="CenterAndExpand" />

        <Entry Placeholder="Debtor Name"
               x:Name="DebtorNameEntry"
               HorizontalOptions="FillAndExpand"
               Margin="0,10,0,10"/>

        <Entry Placeholder="Amount"
               Keyboard="Numeric"
               x:Name="DebtorAmountEntry"
               HorizontalOptions="FillAndExpand"
               Margin="0,10,0,10"/>

        <Button Text="Add Debtor"
                Clicked="OnAddDebtorClicked"
                HorizontalOptions="Center"
                WidthRequest="200"/>

        <ListView x:Name="DebtorsListView"
                  ItemsSource="{Binding Debtors}"
                  HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Amount}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </StackLayout>

</ContentPage>