<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment1.MainPage">

    <StackLayout Padding="20" VerticalOptions="Center">

        <Label Text="The Debt Book"
               FontSize="36"
               HorizontalOptions="CenterAndExpand" />

        <Label Text="Welcome to the Debt Book app. Keep track of your debtors"
               FontSize="18"
               HorizontalOptions="CenterAndExpand"
               Margin="0,20,0,40"/>
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Button Margin = "20" Text="View Debtors"
                Clicked="OnViewDebtorClicked"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="CenterAndExpand" />

            <Button Margin = "20" Text="Add Debtor"
                    Clicked="OnAddDebtorClicked"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="CenterAndExpand" />
        </StackLayout>

    </StackLayout>

</ContentPage>
