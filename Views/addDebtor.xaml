<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment1.addDebtor">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start">

            <Label
                Text="Add Debtor"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Start" />

            <Entry Placeholder="Debtor Name"
                   x:Name="DebtorNameEntry"
                   HorizontalOptions="FillAndExpand"
                   Margin="0,10,0,10"/>

            <Entry Placeholder="Amount"
                   Keyboard="Numeric"
                   x:Name="DebtorAmountEntry"
                   HorizontalOptions="FillAndExpand"
                   Margin="0,10,0,10"/>

            <Button Text="Add Debtor"
               Clicked="OnAddDebtorClicked"
               HorizontalOptions="Center"
               WidthRequest="200"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>